Button #Button {
  LayoutMode: Left;
  Padding: (Full: 6);
  Style: (
    Hovered: (
      Background: #000000(0.2),
    )
  );

  Label #NPCName {
    Padding: (Horizontal: 10, Vertical: 5);
    Style: (RenderBold: true);
    FlexWeight: 1;
  }

  Label #Action {
    Padding: (Horizontal: 10, Vertical: 5);
    Style: (TextColor: #ffffff(0.6));
  }

  Group {
    LayoutMode: Full;
    Anchor: (Height: 1);
    Background: #ffffff(0.3);
  }
}
