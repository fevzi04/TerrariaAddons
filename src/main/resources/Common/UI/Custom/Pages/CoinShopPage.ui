$C = "../Common.ui";

$C.@PageOverlay {}

$C.@DecoratedContainer {
  Anchor: (Width: 740, Height: 480);

  #Title {
    Group {
      $C.@Title {
        @Text = "Shop";
      }
    }
  }

  #Content {
    LayoutMode: Top;
    Padding: (Horizontal: 10);

    Group #ItemListContainer {
      FlexWeight: 1;
      LayoutMode: TopScrolling;
      ScrollbarStyle: $C.@DefaultScrollbarStyle;
      Padding: (Top: 10, Left: 8, Right: 8);

      Group #ItemList {
        LayoutMode: LeftCenterWrap;
      }
    }

    Group #BalanceBar {
      Anchor: (Height: 48);
      LayoutMode: Top;
      Padding: (Horizontal: -2);

      Group {
        Anchor: (Height: 2);
        Background: #19252F;
      }

      Group #BalanceContent {
        FlexWeight: 1;
        LayoutMode: Left;
        Padding: (Left: 12, Right: 12, Bottom: 6);
      }
    }
  }
}

$C.@BackButton {}
